extends base

block content
  main.main
    .login-form
      h2.heading-secondary Reset password
      form#reset-form(data-token=token)
        .form__group
          label(for='password') New password
          input#password(type='password', name='password', placeholder='New Password', required)
        .form__group
          label(for='passwordConfirm') Confirm password
          input#passwordConfirm(type='password', name='passwordConfirm', placeholder='Confirm Password', required)
        .form__group
          //- button.btn--green(type='submit') Reset password
          button(type='submit') Reset Password